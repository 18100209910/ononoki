{
  "manifest_version": 2,
  "name": "meme-maker",
  "version": "0.1.1",
  "description": "表情包生成器",
  "icons": {
    "16": "./icons/16.jpg",
    "48": "./icons/48.jpg",
    "64": "./icons/64.jpg",
    "128": "./icons/128.jpg"
  },
  "author": "devrsi0n",
  "permissions": ["http://localhost:3000/*"],
  "browser_action": {
    "default_icon": "./icons/192.jpg",
    "default_title": "GIF maker"
  },
  "content_scripts": [
    {
      "matches": ["http://*.bilibili.com/*", "https://*.bilibili.com/*"],
      "js": ["vendors/chunk.js", "pages/content/index.js"],
      "css": ["pages/content/index.css"]
    }
  ]
}
